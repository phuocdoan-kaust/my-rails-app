<!DOCTYPE html>
<html>
  <head>
    <title>Wogi Assignment</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%# Navigation Bar %>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container">
        <%= link_to "Wogi Assignment", root_path, class:"navbar-brand" %>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to "Home", root_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Brand", brand_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Product", product_path, class:"nav-link" %>
          </li>
        </ul>
      </div>
    </nav>    
    
    <%# Page Content %>
    <%= yield %>
  </body>
</html>
