<div class="d-flex flex-row">
  <% if user_signed_in? && current_user.admin? %>
    <div class="me-1">
      <%= link_to "EDIT", edit_product_path(@product), class: "btn btn-primary" %>
      <% if @product.active? %>
        <%= link_to "ARCHIVE", switch_state_product_path(@product), class: "btn border border-1" %>
      <% else %>
        <%= link_to "UNARCHIVE", switch_state_product_path(@product), class: "btn border border-1" %>
      <% end %>
    </div>
    <%= button_to "DELETE", @product, method: :delete, class: "d-inline-block btn border border-1 me-1" %>
  <% end %>
  <%= link_to "BACK", products_path, class: "btn border-1 border d-block me-1" %>
</div>
<div class="mt-3">
  <%= render @product %>
</div>
