<div class="d-flex flex-row mb-3">
  <%= link_to "BACK", cards_path, class: "btn border-1 border d-block me-1" %>
</div>
<div class="mt-3">
  <%= render @card %>
</div>
<% if @card.state == 'waiting' %>
  <div class="mt-3 border border-1 shadow-sm p-4">
    <% if notice %> 
      <div class="d-flex mb-3 bg-warning border border-1 p-2 rounded shadow-sm">
        <span class="align-middle"><%= notice %></span>
      </div>
    <% end %>
    <div class="mb-3">
      <strong class="text-muted">Activate Card</strong>
      <hr class="mt-0"/>
    </div>
    <%= form_with url: "/cards/#{@card.id}/activate", method: :post do |form| %>
      <div class="row mb-3">
        <div class="col-sm-2">
          <%= form.label :activate_code, "Activation Code", class: "col-form-label" %>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :activate_code, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-2">
          <%= form.label :old_pin, "Current PIN", class: "col-form-label" %>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :old_pin, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-2">
          <%= form.label :new_pin, "New PIN", class: "col-form-label" %>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :new_pin, class: "form-control" %>
        </div>
      </div>
      <div class="text-end">
        <%= form.submit "ACTIVATE", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
<% end %>
