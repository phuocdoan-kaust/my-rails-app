<%= form_with(model: brand) do |form| %>
  <% if brand.errors.any? %>
    <div class="row mb-3 bg-warning border border-1 p-2 rounded shadow-sm">
      <% brand.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-sm-2">
      <%= form.label :name, class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2">
      <%= form.label :code, class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :code, class: "form-control" %>
    </div>
  </div>

  <div class="text-end">
    <%= form.submit "SAVE", class: "btn btn-primary" %>
    <% if brand.new_record? %>
      <%= link_to "CANCEL", brands_path, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "CANCEL", @brand, class: "btn btn-danger" %>
    <% end %>
  </div>
<% end %>
