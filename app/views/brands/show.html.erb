<p style="color: green"><%= notice %></p>

<%= render @brand %>

<div>
  <% if @brand.active? %>
    <%= link_to "Unactive this brand", switch_state_brand_path(@brand) %>
  <% else %>
    <%= link_to "Active this brand", switch_state_brand_path(@brand) %>
  <% end %>
  <%= link_to "Edit this brand", edit_brand_path(@brand) %> |
  <%= link_to "Back to brands", brands_path %>

  <%= button_to "Destroy this brand", @brand, method: :delete %>
</div>
